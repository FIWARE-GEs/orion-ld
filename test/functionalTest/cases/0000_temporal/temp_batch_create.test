--NAME--
Simple test of creation of an Entity with all types of Attributes

--SHELL-INIT--
export BROKER=orionld
dbInit CB
pgInit $CB_DB_NAME
brokerStart CB 100 IPv4 -temporal

--SHELL--

#
# 01. Create three simple entities, all with one String Property SP
# 02. See the three entities E in the temporal database
# 03. See the three AP attributes in the temporal database
#

echo "01. Create three simple entities, all with one String Property SP"
echo "================================================================="
payload='[
  {
    "id": "urn:ngsi-ld:entities:E1",
    "type": "T",
    "SP": {
      "type": "Property",
      "value": "SP of E1"
    },
    "R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:relationships:R1"
    }
  },
  {
    "id": "urn:ngsi-ld:entities:E2",
    "type": "T",
    "SP": {
      "type": "Property",
      "value": "SP of E2"
    },
    "R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:relationships:R1"
    }
  },
  {
    "id": "urn:ngsi-ld:entities:E3",
    "type": "T",
    "SP": {
      "type": "Property",
      "value": "SP of E3"
    },
    "R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:relationships:R1"
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/create --payload "$payload"
echo
echo


echo "02. See the three entities E in the temporal database"
echo "====================================================="
postgresCmd -sql "SELECT id,type FROM entities"
echo
echo


echo "03. See the three AP attributes in the temporal database"
echo "========================================================"
postgresCmd -sql "SELECT id,valueType,entityId,subProperty,unitcode,datasetid,text FROM attributes"
echo
echo


--REGEXPECT--
01. Create three simple entities, all with one String Property SP
=================================================================
HTTP/1.1 200 OK
Content-Length: 103
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "errors": [],
    "success": [
        "urn:ngsi-ld:entities:E1",
        "urn:ngsi-ld:entities:E2",
        "urn:ngsi-ld:entities:E3"
    ]
}


02. See the three entities E in the temporal database
=====================================================
id,type
urn:ngsi-ld:entities:E1,https://uri.etsi.org/ngsi-ld/default-context/T
urn:ngsi-ld:entities:E2,https://uri.etsi.org/ngsi-ld/default-context/T
urn:ngsi-ld:entities:E3,https://uri.etsi.org/ngsi-ld/default-context/T


03. See the three AP attributes in the temporal database
========================================================
id,valuetype,entityid,subproperty,unitcode,datasetid,text
https://uri.etsi.org/ngsi-ld/default-context/SP,String,urn:ngsi-ld:entities:E1,f,,,SP of E1
https://uri.etsi.org/ngsi-ld/default-context/R1,Relationship,urn:ngsi-ld:entities:E1,f,,,urn:ngsi-ld:relationships:R1
https://uri.etsi.org/ngsi-ld/default-context/SP,String,urn:ngsi-ld:entities:E2,f,,,SP of E2
https://uri.etsi.org/ngsi-ld/default-context/R1,Relationship,urn:ngsi-ld:entities:E2,f,,,urn:ngsi-ld:relationships:R1
https://uri.etsi.org/ngsi-ld/default-context/SP,String,urn:ngsi-ld:entities:E3,f,,,SP of E3
https://uri.etsi.org/ngsi-ld/default-context/R1,Relationship,urn:ngsi-ld:entities:E3,f,,,urn:ngsi-ld:relationships:R1


--TEARDOWN--
brokerStop CB
dbDrop CB
