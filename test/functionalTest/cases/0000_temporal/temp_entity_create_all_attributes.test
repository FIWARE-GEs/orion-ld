# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Simple test of creation of an Entity with all types of Attributes

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0 IPv4 -temporal

--SHELL--

#
# 01. Create an entity E with an attribute A that is a string
# 02. See the entity E in the temporal database
# 03. See the attribute A as a string in the temporal database
#

echo "01. Create an entity E with an attribute A that is a string"
echo "==========================================================="
payload='{
  "id": "urn:ngsi-ld:entities:E",
  "type": "T",
  "A": {
    "type": "Property",
    "value": "A String"
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/json"
echo
echo


echo "02. See the entity E in the temporal database"
echo "============================================="
#postgresCmd orionld "SELECT * FROM entity_table"
echo
echo


echo "03. See the attribute A as a string in the temporal database"
echo "============================================================"
#postgresCmd orionld "SELECT * FROM attribute_table"
echo
echo


--REGEXPECT--
01. Create an entity E with an attribute A that is a string
===========================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/http://a.b.c/entity/E
Date: REGEX(.*)



02. See the entity E in the temporal database
=============================================


03. See the attribute A as a string in the temporal database
============================================================


--TEARDOWN--
brokerStop CB
dbDrop CB
