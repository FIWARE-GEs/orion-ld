# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
PATCH an entity attribute replacing sub-attributes

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--
#
# 01. Create an entity E1 with property P1 having a sub-property P1-R1
# 02. See E1 in mongo
# 03. PATCH E1/P1, replacing the sub-property P1-R1
# 04. See E1 in mongo
# 05. GET the entity E1, make sure that the E1/P1/P1-R1 value was changed
#

echo "01. Create an entity E1 with property P1 having a sub-property P1-R1"
echo "===================================================================="
payload='{
  "id": "urn:ngsi-ld:entity:E1",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": 1,
    "observedAt": "2021-03-27T12:30:00.001Z",
    "P1-R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:entities:E1"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. See E1 in DB"
echo "================"
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "03. PATCH E1/P1, replacing the sub-property P1-R1"
echo "================================================="
payload='{
  "value": 3,
  "observedAt": "2021-03-27T12:30:00.003Z",
  "P1-R1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:entities:E3"
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1/attrs/P1 -X PATCH --payload "$payload"
echo
echo


echo "04. See E1 in DB"
echo "================"
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "05. GET the entity E1, make sure that the E1/P1/P1-R1 value was changed"
echo "======================================================================="
orionCurl --url '/ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1?prettyPrint=yes' --noPayloadCheck
echo
echo


