# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Retrieval of Entities with URI param 'id' as a list of entity ids

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E1, with test context, and type T
# 02. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E2, with test context, and type T2
# 03. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E3, with test context, and type T
# 04. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E4, with test context, and type T2
# 05. GET entities with id E2 or E4 - see E2 and E4
# 06. GET entities with id E1 or E2, and E5 - see E1 and E2
# 07. GET entities with id E6, see empty array
#
echo "01. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E1, with test context, and type T"
echo "===================================================================================="
payload='{
  "id": "http://a.b.c/entity/E1",
  "type": "T",
  "A1": {
    "type": "Property",
    "value": "E1"
  },
  "@context": "https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "02. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E2, with test context, and type T2"
echo "====================================================================================="
payload='{
  "id": "http://a.b.c/entity/E2",
  "type": "T2",
  "A1": {
    "type": "Property",
    "value": "E2"
  },
  "@context": "https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "03. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E3, with test context, and type T"
echo "===================================================================================="
payload='{
  "id": "http://a.b.c/entity/E3",
  "type": "T",
  "A1": {
    "type": "Property",
    "value": "E3"
  },
  "@context": "https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "04. POST /ngsi-ld/v1/entities::http://a.b.c/entity/E4, with test context, and type T2"
echo "====================================================================================="
payload='{
  "id": "http://a.b.c/entity/E4",
  "type": "T2",
  "A1": {
    "type": "Property",
    "value": "E4"
  },
  "@context": "https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "05. GET entities with id E2 or E4 - see E2 and E4"
echo "================================================="
orionCurl --url '/ngsi-ld/v1/entities?id=http://a.b.c/entity/E2,http://a.b.c/entity/E4&prettyPrint=yes' --noPayloadCheck -H "Accept: application/ld+json" -H 'Link: <https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"'
echo
echo


echo "06. GET entities with id E1 or E2, and E5 - see E1 and E2"
echo "========================================================="
orionCurl --url '/ngsi-ld/v1/entities?id=http://a.b.c/entity/E1,http://a.b.c/entity/E2,http://a.b.c/entity/E5&prettyPrint=yes' --noPayloadCheck -H "Accept: application/ld+json" -H 'Link: <https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"'
echo
echo


echo "07. GET entities with id E6, see empty array"
echo "============================================"
orionCurl --url '/ngsi-ld/v1/entities?id=http://a.b.c/entity/E6&prettyPrint=yes' --noPayloadCheck -H "Accept: application/ld+json" -H 'Link: <https://fiware.github.io/NGSI-LD_Tests/ldContext/testContext.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"'
echo
echo


