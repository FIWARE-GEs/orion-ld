# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Subscription Test - Any attribute watched. Non existent attribute asked

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create an entity urn:ngsi-ld:Vehicle:V1234 with an attribute speed==34
# 02. Create subscription that does not match the entity (with a string filter)
# 03. Dump accumulator and see no notification
# 04. Update the entity so that it matches the string filter of the subscription
# 05. Dump accumulator to see ONE notification, not two
#

echo "01. Create an entity urn:ngsi-ld:Vehicle:V1234 with an attribute speed==34"
echo "=========================================================================="
payload='{
  "id": "urn:ngsi-ld:Vehicle:V1234",
  "type": "Vehicle",
  "speed": {
    "type": "Property",
    "value": 34
  },
  "brandName": {
    "type": "Property",
    "value": "Mercedes"
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Create subscription that does not match the entity (with a string filter)"
echo "============================================================================="
payload='{
  "id": "urn:ngsi-ld:Subscription:mySubscription",
  "type": "Subscription",
  "entities": [
    {
      "type": "Vehicle"
    }
  ],
  "q": "speed>80",
  "notification": {
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
      "accept": "application/json"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


# echo "00. Check entities in mongo"
# echo "==========================="
# mongoCmd2 ftest "db.entities.findOne()"
# echo
# echo
# 
# 
# echo "00. Check subscriptions in mongo"
# echo "================================"
# mongoCmd2 ftest "db.csubs.findOne()"
# echo
# echo
 

echo "03. Dump accumulator and see no notification"
echo "============================================"
accumulatorDump
echo
echo


echo "04. Update the entity so that it matches the string filter of the subscription"
echo "=============================================================================="
payload='{
  "speed": { "value": 81, "type": "Property" }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:Vehicle:V1234/attrs --payload "$payload"
echo
echo


echo "05. Dump accumulator to see ONE notification, not two"
echo "====================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "06. Update the entity so that doesn't match the string filter of the subscription"
echo "================================================================================="
payload='{
  "speed": { "value": 80, "type": "Property" }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:Vehicle:V1234/attrs --payload "$payload"
echo
echo


echo "07. Dump accumulator to see NO notification"
echo "==========================================="
accumulatorDump
echo
echo


--REGEXPECT--
