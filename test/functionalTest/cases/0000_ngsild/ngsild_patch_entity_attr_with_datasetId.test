# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Update an entity attribute using PATCH, with datasetId

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--
#
# 01. Create an entity E1 with a property P1 having a datasetId D1
# 02. See E1 in mongo
# 03. PATCH E1/P1 with datasetId D1
# 04. See E1 in mongo
# 05. GET E1 and see the changes made in step 03
#

echo "01. Create an entity E1 with a property P1 having a datasetId D1"
echo "================================================================"
payload='{
  "id": "urn:ngsi-ld:entity:E1",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": 1,
    "datasetId": "urn:ngsi-ld:dataset:D1"
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. See E1 in mongo"
echo "==================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "03. PATCH E1/P1 with datasetId D1"
echo "================================="
payload='{
  "value": 3,
  "datasetId": "urn:ngsi-ld:dataset:D1"
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1/attrs/P1 --payload "$payload" -X PATCH
echo
echo


echo "04. See E1 in mongo"
echo "==================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "05. GET E1 and see the changes made in step 03"
echo "=============================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1
echo
echo


--REGEXPECT--
01. Create an entity E1 with a property P1 having a datasetId D1
================================================================


02. See E1 in mongo
===================


03. PATCH E1/P1 with datasetId D1
=================================


04. See E1 in mongo
===================


05. GET E1 and see the changes made in step 03
==============================================


--TEARDOWN--
brokerStop CB
dbDrop CB
