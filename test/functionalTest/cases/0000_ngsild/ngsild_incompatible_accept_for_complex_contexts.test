#
#

echo "01. POST /ngsi-ld/v1/entities"
echo "============================="
payload='{
  "id": "http://a.b.c/E8",
  "type": "A",
  "name": { "type": "Property", "value": "John" },
  "@context": ["false context 1", "false context 2" ]
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "02. POST /ngsi-ld/v1/entities/E9/attrs"
echo "======================================"
payload='{
  "A1": {
    "type": "Property",
    "value": 1
  },
  "@context": ["false context 1", "false context 2" ]
}'
orionCurl --url /ngsi-ld/v1/entities/http://a.b.c/list/of/entities/E9.xxx/attrs --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "03. POST /ngsi-ld/v1/subscriptions"
echo "=================================="
payload='{
  "watchedAttributes": [ "A1", "A2" ],
  "isActive": false,
  "notification": {
    "attributes": [ "P1", "P2", "A3" ],
    "format": "keyValues",
    "endpoint": {
      "uri": "http://valid.url/url",
      "accept": "application/ld+json"
    },
    "status": "ignored",
    "timesSent": "ignored",
    "lastNotification": "ignored",
    "lastFailure": "ignored",
    "lastSuccess": "ignored"
  },
  "@context": ["false context 1", "false context 2" ]
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "04. POST /ngsi-ld/v1/csourceRegistrations"
echo "========================================="
payload='{
  "expiration": "now",
  "@context": ["false context 1", "false context 2" ]
}'
orionCurl --url /ngsi-ld/v1/csourceRegistrations --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "05. PATCH /ngsi-ld/v1/entities/E1/attrs"
echo "======================================="
payload='{ "a": 1, "@context": ["false context 1", "false context 2" ] }'
orionCurl --url /ngsi-ld/v1/entities/http://a.b.c/list/of/entities/E1.xxx/attrs --payload "$payload" -X PATCH -H "Content-Type: application/ld+json"
echo
echo


echo "06. PATCH /ngsi-ld/v1/subscriptions/S1"
echo "======================================"
payload='{ "a": 1, "@context": ["false context 1", "false context 2" ] }'
orionCurl --url /ngsi-ld/v1/subscriptions/S1 --payload "$payload" -X PATCH -H "Content-Type: application/ld+json"
echo
echo


echo "07. PATCH /ngsi-ld/v1/csourceRegistrations/R1"
echo "============================================="
payload='{ "@context": ["false context 1", "false context 2" ] }'
orionCurl --url /ngsi-ld/v1/csourceRegistrations/R1 --payload "$payload" -X PATCH -H "Content-Type: application/ld+json"
echo
echo


