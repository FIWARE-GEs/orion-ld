# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Retrieval of entities in the GeoJSON format

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create an entity with a location GeoProperty 
# 02. GET the entity in GeoJSON format 
# 03. GET the entity in GeoJSON format with keyValues
# 04. GET the entity in GeoJSON format and Prefer header forcing Link header
#

echo "01. Create an entity with a location GeoProperty"
echo "================================================"
payload='{
  "id": "urn:ngsi-ld:City:Madrid",
  "type": "City",
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [-3.691944, 40.418889]
    }
  },
  "P1": {
    "type": "Property",
    "value": 12
  },
  "R1": {
    "type": "Relationship",
    "object": "urn:xxx"
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/json"
echo
echo


echo "02. GET the entity in GeoJSON format"
echo "===================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:City:Madrid --out "application/geo+json"
echo
echo


echo "03. GET the entity in GeoJSON format with keyValues"
echo "==================================================="
orionCurl --url '/ngsi-ld/v1/entities/urn:ngsi-ld:City:Madrid?options=keyValues' --out "application/geo+json"
echo
echo


echo "04. GET the entity in GeoJSON format and Prefer header forcing Link header"
echo "=========================================================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:City:Madrid --out "application/geo+json" -H "Prefer: body=json"
echo
echo


--REGEXPECT--
01. Create an entity with a location GeoProperty
================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:City:Madrid
Date: REGEX(.*)



02. GET the entity in GeoJSON format
====================================
HTTP/1.1 200 OK
Content-Length: 394
Content-Type: application/json
Date: REGEX(.*)

{
    "@context": "https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld",
    "geometry": {
        "coordinates": [
            -3.691944,
            40.418889
        ],
        "type": "Point"
    },
    "id": "urn:ngsi-ld:City:Madrid",
    "properties": {
        "P1": {
            "type": "Property",
            "value": 12
        },
        "R1": {
            "object": "urn:xxx",
            "type": "Relationship"
        },
        "location": {
            "type": "GeoProperty",
            "value": {
                "coordinates": [
                    -3.691944,
                    40.418889
                ],
                "type": "Point"
            }
        },
        "type": "City"
    },
    "type": "Feature"
}


03. GET the entity in GeoJSON format with keyValues
===================================================
HTTP/1.1 200 OK
Content-Length: 302
Content-Type: application/json
Date: REGEX(.*)

{
    "@context": "https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld",
    "geometry": {
        "coordinates": [
            -3.691944,
            40.418889
        ],
        "type": "Point"
    },
    "id": "urn:ngsi-ld:City:Madrid",
    "properties": {
        "P1": 12,
        "R1": "urn:xxx",
        "location": {
            "coordinates": [
                -3.691944,
                40.418889
            ],
            "type": "Point"
        },
        "type": "City"
    },
    "type": "Feature"
}


04. GET the entity in GeoJSON format and Prefer header forcing Link header
==========================================================================
HTTP/1.1 200 OK
Content-Length: 321
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Date: REGEX(.*)

{
    "geometry": {
        "coordinates": [
            -3.691944,
            40.418889
        ],
        "type": "Point"
    },
    "id": "urn:ngsi-ld:City:Madrid",
    "properties": {
        "P1": {
            "type": "Property",
            "value": 12
        },
        "R1": {
            "object": "urn:xxx",
            "type": "Relationship"
        },
        "location": {
            "type": "GeoProperty",
            "value": {
                "coordinates": [
                    -3.691944,
                    40.418889
                ],
                "type": "Point"
            }
        },
        "type": "City"
    },
    "type": "Feature"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
