# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Parse Contexts - Simple URI Expansion for attributes

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB

--SHELL--

#
# The default context will be used:
# https://forge.etsi.org/gitlab/NGSI-LD/NGSI-LD/raw/master/coreContext/ngsi-ld-core-context.json
# {
#   "@context": {
#     ...
#     "title": "http://uri.etsi.org/ngsi-ld/title",
#     "createdAt": {
#       "@id": "http://uri.etsi.org/ngsi-ld/createdAt",
#       "@type": "DateTime"
#     },
#     ...
#   }
# }
#

#
# 01. POST /ngsi-ld/v1/entities, with an attribute called 'title'
# 02. Checking mongo to find attribute http://uri.etsi.org/ngsi-ld/title
#
# FIXME: Once GET /ngsi-ld/v1/entities gets implemented, use that instead of mngoCmd2
#

echo "01. POST /ngsi-ld/v1/entities, with an attribute called 'title'"
echo "==============================================================="
payload='{
  "id": "http://a.b.c/entity/E1",
  "type": "T",
  "title": {
    "value": "Titulo",
    "type": "Property",
    "unitCode": "123",
    "R_R": {
      "type": "Relationship",
      "object": "http://a.b.c/R_R"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


echo "02. Checking mongo to find entity type http://example.org/T and the metadata @aliasAttrName"
echo "=============================================================================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


--REGEXPECT--
01. POST /ngsi-ld/v1/entities, with an attribute called 'title'
===============================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/http://a.b.c/entity/E1
Date: REGEX(.*)



02. Checking mongo to find entity type http://example.org/T and the metadata @aliasAttrName
==============================================================================================
MongoDB shell version REGEX(.*)
connecting to: REGEX(.*)
MongoDB server version: REGEX(.*)
{
	"_id" : {
		"id" : "http://a.b.c/entity/E1",
		"type" : "http://www.example.org/entities/T",
		"servicePath" : "/"
	},
	"attrNames" : [
		"http://uri.etsi.org/ngsi-ld/title"
	],
	"attrs" : {
		"http://uri=etsi=org/ngsi-ld/title" : {
			"type" : "http://etsi.org/nsgi-ld/Property",
			"creDate" : REGEX(.*),
			"modDate" : REGEX(.*),
			"value" : {
				"value" : "Titulo",
				"unitCode" : "123",
				"R_R" : {
					"type" : "Relationship",
					"object" : "http://a.b.c/R_R"
				}
			},
			"md" : {
				"@aliasAttributeName" : {
					"type" : "Alias",
					"value" : "title"
				},
				"@aliasAttributeType" : {
					"type" : "Alias",
					"value" : "Property"
				}
			},
			"mdNames" : [
				"@aliasAttributeName",
				"@aliasAttributeType"
			]
		}
	},
	"creDate" : REGEX(.*),
	"modDate" : REGEX(.*),
	"lastCorrelator" : ""
}
bye


--TEARDOWN--
brokerStop CB
#dbDrop CB
